<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: poppins;
		background: #13151a;
		background-size: 224px;
	}

	body {
		margin: 0;
		padding: 0;
	}

	header {
		background-color: #f8df00;
		height: 18vh;
		width: 100%;
	}

	#nav {
		display: flex;
		justify-content: space-around;
		align-items: center;
		margin-left: 50px;
		margin-right: 50px;
	}

	#nav img {
		width: 200px;
		cursor: pointer;
	}

	header ul {
		display: flex;
		justify-content: center;
		gap: 4rem;
		list-style-type: none;
	}
	
	header li {		
		font-size: 1.1rem;
		cursor: pointer;
		transition: .3s ease-out;
	}
	header ul li span:hover {
		text-decoration: underline;
	}

	ul li i {
		vertical-align: middle;
		margin-right: 10px;
	}
	ul li {
		display: inline-block;
	}


#container {
    display: flex;
}

#sectizq img, #sectder img {
	width: 49.9vw;
	height: 170px;
	background-repeat: no-repeat;
	background-size: cover;   
	opacity: 0.6;
	transition: 0.3s;
	border: 1px solid #f8df00;
	cursor: pointer;
}

#sectizq img:hover, #sectder img:hover {
	opacity: 1;
	transform: scale(1.1);
}

#sectizq p, #sectder p {
    position: absolute;
	color: white;
	top: 160px;
	transform: translateX(60%);
	opacity: 1;
	font-size: 50px;	
	text-align: center;
	z-index: 1;
	cursor: pointer;

}

</style>
